# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~{ VARIABLES }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

# COLORS
RESET			=	\033[0m
RED				=	\033[0;31m
GREEN			=	\033[0;32m
YELLOW			=	\033[0;33m
BLUE			=	\033[0;34m
CYAN			=	\033[0;36m


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~{ PROGRAM }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

NAME			=	HarlFilter


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~{ COMPILATION }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #


CC				=	c++
RM				=	rm -rf
CFLAGS			+=	-Wall -Wextra -Werror -std=c++98


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~{ PATHS }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

OBJ_PATH		=	.obj


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~{ SOURCES }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

HEADERS			=	$(addsuffix .hpp, \
					Harl )

SRCS 			=	$(addsuffix .cpp, \
					main \
					Harl)

OBJS			=	$(SRCS:%.cpp=$(OBJ_PATH)/%.o)

DEPS			=	$(OBJS:.o=.d)

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~{ RULES }~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

all: $(NAME)

$(NAME): $(OBJS) $(HEADERS)
	@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	@printf "${GREEN}> $(NAME) has been created üìö${RESET}\n"

$(OBJ_PATH)/%.o: %.cpp $(HEADERS)
			@mkdir -p $(dir $@)
			@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@$(RM) $(OBJ_PATH)
	@printf "${CYAN}> $(NAME) object files have been removed üóëÔ∏è${RESET}\n"

fclean:	clean
	@$(RM) $(NAME)
	@printf "${CYAN}> $(NAME) has been removed üóëÔ∏è${RESET}\n"

re: clean all

-include $(DEPS)

.PHONY: all clean re fclean

